---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full bg-stone-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="The Recipe Collection" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/print.css`} media="print" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <style is:global>
      /* 
       * Typography System
       * Based on a 1.25 (Major Third) modular scale
       * Base: 16px, Line height: 1.6 for body, 1.3 for headings
       * Spacing: 1.5em between major blocks
       */

      /* Headings - Clear hierarchy with weight and size differentiation */
      .prose-refined h2 {
        font-size: 1.25rem; /* 20px - Major section headers */
        font-weight: 700;
        letter-spacing: -0.02em;
        color: #0f172a; /* slate-900 */
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        padding-bottom: 0.625rem;
        border-bottom: 1px solid #e2e8f0;
        line-height: 1.3;
      }
      .prose-refined h2:first-child {
        margin-top: 0;
      }

      .prose-refined h3 {
        font-size: 1.0625rem; /* 17px - Subsections */
        font-weight: 600;
        color: #1e293b; /* slate-800 */
        margin-top: 2rem;
        margin-bottom: 0.75rem;
        line-height: 1.3;
      }

      /* Paragraphs - Optimal reading experience */
      .prose-refined p {
        font-size: 0.9375rem; /* 15px - Slightly smaller than 16 for density */
        color: #475569; /* slate-600 */
        line-height: 1.65; /* Optimal for body text */
        margin-bottom: 1.25em; /* Proportional to font size */
      }
      
      /* Paragraphs that contain ONLY a strong tag (category headers like "Apps:") */
      .prose-refined p > strong:only-child {
        display: block;
        font-size: 0.875rem; /* 14px */
        font-weight: 700;
        color: #334155; /* slate-700 */
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: 1.5rem;
        margin-bottom: 0.25rem;
        padding-bottom: 0;
      }
      /* Remove the parent paragraph's margin when it's a category header */
      .prose-refined p:has(> strong:only-child) {
        margin-bottom: 0.5rem;
      }

      /* Regular strong tags within text */
      .prose-refined strong {
        font-weight: 600;
        color: #1e293b; /* slate-800 */
      }

      /* Emphasis */
      .prose-refined em {
        font-style: italic;
        color: #475569;
      }

      /* Unordered lists */
      .prose-refined ul {
        list-style: none;
        padding-left: 0;
        margin-top: 0.5rem;
        margin-bottom: 1.5rem;
      }
      .prose-refined ul li {
        position: relative;
        padding-left: 1.25rem;
        font-size: 0.9375rem;
        color: #475569;
        line-height: 1.6;
        margin-bottom: 0.375rem;
      }
      .prose-refined ul li::before {
        content: '•';
        position: absolute;
        left: 0;
        color: #94a3b8; /* slate-400 */
        font-weight: 600;
      }
      /* Links in list items should be prominent */
      .prose-refined ul li a {
        font-weight: 600;
      }
      /* Em dashes in list items (descriptions) */
      .prose-refined ul li em {
        color: #64748b; /* slate-500 */
        font-style: normal;
        font-size: 0.875rem;
      }

      /* Ordered lists (recipe directions) */
      .prose-refined ol {
        list-style: none;
        padding-left: 0;
        margin-top: 0.75rem;
        margin-bottom: 1.5rem;
        counter-reset: step-counter;
      }
      .prose-refined ol li {
        position: relative;
        padding-left: 2rem;
        font-size: 0.9375rem;
        color: #475569;
        line-height: 1.65;
        margin-bottom: 0.75rem;
        counter-increment: step-counter;
      }
      .prose-refined ol li::before {
        content: counter(step-counter) '.';
        position: absolute;
        left: 0;
        top: 0;
        font-size: 0.875rem;
        font-weight: 700;
        color: #6366f1; /* indigo-500 */
        width: 1.5rem;
      }
      /* Bold step labels in ordered lists */
      .prose-refined ol li strong:first-child {
        font-weight: 700;
        color: #1e293b; /* slate-800 */
      }

      /* Links */
      .prose-refined a {
        color: #4f46e5; /* indigo-600 */
        text-decoration: none;
        font-weight: 500;
        transition: color 0.15s ease;
      }
      .prose-refined a:hover {
        color: #4338ca; /* indigo-700 */
        text-decoration: underline;
        text-underline-offset: 2px;
      }

      /* Tables - Modern card-style instead of traditional borders */
      .prose-refined table {
        width: 100%;
        margin: 1.5rem 0;
        font-size: 0.875rem;
        border-radius: 0.5rem;
        overflow: hidden;
        background: #f8fafc; /* slate-50 */
        border: 1px solid #e2e8f0;
      }
      .prose-refined thead {
        background: #f1f5f9; /* slate-100 */
      }
      .prose-refined thead tr {
        border-bottom: 1px solid #e2e8f0;
      }
      .prose-refined th {
        padding: 0.75rem 1rem;
        text-align: left;
        font-size: 0.6875rem; /* 11px */
        font-weight: 700;
        color: #64748b; /* slate-500 */
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }
      .prose-refined td {
        padding: 0.625rem 1rem;
        color: #334155; /* slate-700 */
        background: white;
        border-bottom: 1px solid #f1f5f9;
        line-height: 1.5;
      }
      .prose-refined tbody tr:last-child td {
        border-bottom: none;
      }
      .prose-refined td:first-child {
        font-weight: 600;
        color: #1e293b; /* slate-800 */
        white-space: nowrap;
      }

      /* Horizontal rule */
      .prose-refined hr {
        border: none;
        height: 1px;
        background: linear-gradient(to right, transparent, #cbd5e1, transparent);
        margin: 2.5rem 0;
      }

      /* Block quotes (for notes/tips) */
      .prose-refined blockquote {
        margin: 1.5rem 0;
        padding: 1rem 1.25rem;
        background: #fefce8; /* yellow-50 */
        border-left: 3px solid #facc15; /* yellow-400 */
        border-radius: 0 0.375rem 0.375rem 0;
      }
      .prose-refined blockquote p {
        margin-bottom: 0;
        font-size: 0.875rem;
        color: #713f12; /* yellow-900 */
      }

      /* Code inline */
      .prose-refined code {
        font-size: 0.875em;
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
        background: #f1f5f9;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        color: #334155;
      }
    </style>
  </head>
  <body class="h-full flex flex-col font-sans text-slate-900 antialiased">
    <header class="bg-white/80 backdrop-blur-md border-b border-slate-200/80 sticky top-0 z-20">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-14 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <a href={import.meta.env.BASE_URL} class="flex items-center gap-2.5 group">
            <div
              class="w-7 h-7 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-lg flex items-center justify-center text-white font-bold text-sm shadow-sm group-hover:shadow-md group-hover:from-indigo-600 group-hover:to-indigo-700 transition-all duration-200"
            >
              M
            </div>
            <span
              class="text-lg font-bold text-slate-900 tracking-tight group-hover:text-indigo-600 transition-colors"
              >Mise</span
            >
          </a>
        </div>

        <nav class="flex items-center gap-1">
          <a
            href={import.meta.env.BASE_URL}
            class="px-3 py-1.5 text-sm font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-100 rounded-lg transition-colors"
            >Recipes</a
          >
          <a
            href={`${import.meta.env.BASE_URL}meals`}
            class="px-3 py-1.5 text-sm font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-100 rounded-lg transition-colors"
            >Meals</a
          >
          <a
            href={`${import.meta.env.BASE_URL}calendar`}
            class="px-3 py-1.5 text-sm font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-100 rounded-lg transition-colors"
            >Calendar</a
          >
        </nav>
      </div>
    </header>

    <main class="flex-grow w-full max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
      <slot />
    </main>

    <footer class="border-t border-slate-200/60 mt-auto bg-white/50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col md:flex-row justify-between items-center gap-3">
          <p class="text-xs text-slate-400">
            &copy; {new Date().getFullYear()} Mise. All rights reserved.
          </p>
          <div class="flex gap-2 text-xs text-slate-400">
            <span>Taste</span>
            <span class="text-slate-300">·</span>
            <span>Tradition</span>
            <span class="text-slate-300">·</span>
            <span>Together</span>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
