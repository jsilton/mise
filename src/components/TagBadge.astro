---
// TagBadge.astro - Reusable tag badge component for consistent styling across pages

interface Props {
  tag: string;
  category:
    | 'cooking-method'
    | 'cuisine'
    | 'dietary'
    | 'occasion'
    | 'flavor'
    | 'difficulty'
    | 'role'
    | 'vibe';
  href?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { tag, category, href, size = 'md' } = Astro.props;

// Color mappings by category
const categoryColors = {
  'cooking-method': 'bg-blue-50 text-blue-600 border-blue-100 hover:bg-blue-100',
  cuisine: 'bg-purple-50 text-purple-600 border-purple-100 hover:bg-purple-100',
  dietary: 'bg-emerald-50 text-emerald-600 border-emerald-100 hover:bg-emerald-100',
  occasion: 'bg-amber-50 text-amber-600 border-amber-100 hover:bg-amber-100',
  flavor: 'bg-rose-50 text-rose-600 border-rose-100 hover:bg-rose-100',
  difficulty: 'bg-slate-50 text-slate-600 border-slate-150 hover:bg-slate-100',
  role: 'bg-indigo-50 text-indigo-600 border-indigo-100 hover:bg-indigo-100',
  vibe: 'bg-teal-50 text-teal-600 border-teal-100 hover:bg-teal-100',
};

const sizeClasses = {
  sm: 'text-2xs px-2 py-0.5 font-medium',
  md: 'text-xs px-2.5 py-1 font-medium',
  lg: 'text-sm px-3 py-1.5 font-medium',
};

const colorClass = categoryColors[category];
const sizeClass = sizeClasses[size];
---

{
  href ? (
    <a
      href={href}
      class={`inline-flex items-center gap-1 border rounded-full font-medium transition-colors ${colorClass} ${sizeClass}`}
    >
      {tag}
    </a>
  ) : (
    <span
      class={`inline-flex items-center gap-1 border rounded-full font-medium ${colorClass} ${sizeClass}`}
    >
      {tag}
    </span>
  )
}
